@model IEnumerable<WebApplication3.Entitiy.Product>

@{
    ViewBag.Title = "Index";
}

<div class="container pb-5">
    <h2>Yeni Ürün</h2>
    <hr />
    <p>
        @Html.ActionLink("Yeni Ürün", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <hr />
    <table class="table table-bordered table-striped">
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
         
            <th>
                @Html.DisplayNameFor(model => model.IsHome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <th>
            <img src="~/theme/img/@item.Image" width="70" />
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        @if (item.IsHome)
        {

            <label class="label label-succes">
                <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                Anasayfa
            </label>

        }
        else
        {
            <label class="label label-primary">
                <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                Anasayfada Değil
            </label>
        }
        <td>
            @Html.DisplayFor(modelItem => item.IsApproved)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
        }

    </table>
</div>